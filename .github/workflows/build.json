{
  "text": "Build {{ job_status }}: {{ repo }}",
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*GitHub Actions Build* {{ job_status }}\n_<{{ repo_url }}/commit/{{ commit }}|{{ commit }}>_"
      },
      "accessory": {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "View workflow",
          "emoji": true
        },
        "url": "{{ actions_url }}"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Repo:*\n<{{ repo_url }}|{{ repo }}>"
        },
        {
          "type": "mrkdwn",
          "text": "*Build Number:*\n<{{ run_number }}>"
        },
        {
          "type": "mrkdwn",
          "text": "*User:*\n{{ actor }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Ref:*\n{{ ref }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Event:*\n{{ event }}"
        }
      ]
    }
  ]
}
