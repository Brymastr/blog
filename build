#!/usr/bin/env bash

export NODE_ENV=production

rm -f posts.json && touch posts.json

docker-compose up -d --build

sleep 1

attempts=0
maxAttempts=100
while ! [ -s "posts.json" ] && [ $attempts -lt $maxAttempts ]; do
  ((attempts=attempts+1))
  echo "waiting for posts to be exported..."
  sleep 1
done

docker-compose logs
docker-compose stop


next build && next export -o dist
